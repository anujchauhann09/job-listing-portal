generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OAuthProvider {
  GOOGLE
  GITHUB
  LINKEDIN
}

enum JobType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
  CONTRACT
}

enum ExperienceLevel {
  FRESHER
  JUNIOR
  MID
  SENIOR
}

enum RemoteType {
  ONSITE
  REMOTE
  HYBRID
}

enum SalaryPeriod {
  MONTHLY
  YEARLY
}

enum JobStatus {
  DRAFT
  OPEN
  CLOSED
  ARCHIVED
}

enum ApplicationStatus {
  APPLIED
  SHORTLISTED
  REJECTED
  HIRED
  WITHDRAWN
}

model Role {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  users     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int     @id @default(autoincrement())
  uuid      String  @unique @default(uuid())
  email     String  @unique
  password  String?
  roleId    Int
  role      Role    @relation(fields: [roleId], references: [id])

  isActive  Boolean @default(true)
  isDeleted Boolean @default(false)

  profile   UserProfile?
  employer  Employer?
  jobSeeker JobSeeker?

  refreshTokens RefreshToken[]
  oauthAccounts OAuthAccount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roleId])
  @@index([isActive, isDeleted])
}

model UserProfile {
  id        Int    @id @default(autoincrement())
  uuid      String @unique @default(uuid())
  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])

  name      String
  bio       String?
  phone     String?
  avatarUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Employer {
  id                  Int    @id @default(autoincrement())
  uuid                String @unique @default(uuid())
  userId              Int    @unique
  user                User   @relation(fields: [userId], references: [id])

  companyName         String?
  companyDescription  String?
  companySize         Int?
  industry            String?
  website             String?
  companyLogoUrl      String?
  headquartersCity    String?
  headquartersCountry String?

  jobs                Job[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model JobSeeker {
  id              Int    @id @default(autoincrement())
  uuid            String @unique @default(uuid())
  userId          Int    @unique
  user            User   @relation(fields: [userId], references: [id])

  resumeUrl       String?
  experienceYears Int?
  currentTitle    String?
  currentLocation String?
  expectedSalary Decimal? @db.Decimal(12,2)
  noticePeriodDays Int?

  skills          JobSeekerSkill[]
  applications    JobApplication[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([currentLocation])
  @@index([experienceYears])
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobSeekers JobSeekerSkill[]
  jobs       JobSkill[]
}

model JobSeekerSkill {
  jobSeekerId Int
  skillId     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobSeeker JobSeeker @relation(fields: [jobSeekerId], references: [id])
  skill     Skill     @relation(fields: [skillId], references: [id])

  @@id([jobSeekerId, skillId])
  @@index([jobSeekerId])
  @@index([skillId])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  isRevoked Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model OAuthAccount {
  id               Int    @id @default(autoincrement())
  provider         OAuthProvider
  providerUserId   String

  userId           Int
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  email            String?
  avatarUrl        String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([provider, providerUserId])
  @@unique([userId, provider])
  @@index([userId])
}

model Job {
  id               Int      @id @default(autoincrement())
  uuid             String   @unique @default(uuid())

  employerId       Int
  employer         Employer @relation(fields: [employerId], references: [id])

  title            String
  description      String
  qualifications   String?
  responsibilities String?

  location         String
  jobType          JobType
  experienceLevel  ExperienceLevel
  remoteType       RemoteType

  salaryMin        Decimal?
  salaryMax        Decimal?
  salaryCurrency   String?   
  salaryPeriod     SalaryPeriod?

  status           JobStatus @default(OPEN)
  isActive         Boolean   @default(true)
  isDeleted        Boolean   @default(false)

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  skills           JobSkill[]
  applications     JobApplication[]

  @@index([employerId])
  @@index([status])
  @@index([jobType])
  @@index([location])
}

model JobApplication {
  id           Int        @id @default(autoincrement())
  uuid         String     @unique @default(uuid())

  jobId        Int
  job          Job        @relation(fields: [jobId], references: [id])

  jobSeekerId  Int
  jobSeeker    JobSeeker  @relation(fields: [jobSeekerId], references: [id])

  status       ApplicationStatus @default(APPLIED)

  resumeUrl    String?    
  coverLetter  String?

  appliedAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  isDeleted    Boolean    @default(false)

  @@unique([jobId, jobSeekerId]) 
  @@index([jobId])
  @@index([jobSeekerId])
}

model JobSkill {
  jobId    Int
  skillId  Int

  job      Job   @relation(fields: [jobId], references: [id])
  skill    Skill @relation(fields: [skillId], references: [id])

  createdAt DateTime @default(now())
  updatedAt    DateTime   @updatedAt

  @@id([jobId, skillId])
  @@index([skillId])
}
